<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.AbsolutePage"
             BackgroundColor="#f2afc1">
    
    <AbsoluteLayout>
        <!-- TÃ­tulo -->
        <Label
            Text="TYLER, THE CREATOR"
            FontSize="30"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="Black"
            SemanticProperties.HeadingLevel="Level1"
            AbsoluteLayout.LayoutBounds="0.5, 0.1, AutoSize, AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional" />

        <Image
            Source="tyler.jpg"
            HeightRequest="185"
            Aspect="AspectFit"
            AbsoluteLayout.LayoutBounds="0.5, 0.3, AutoSize, AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional" />
        
        <Button 
            Text="Grid Layout" 
            TextColor="#F2AFC1"
            Clicked="OnNavigateToGridLayout"
            BackgroundColor="Black"
            AbsoluteLayout.LayoutBounds="0.95, 0.95, AutoSize, AutoSize"
            AbsoluteLayout.LayoutFlags="PositionProportional" />
    </AbsoluteLayout>
    
</ContentPage>