<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts.GridPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <BoxView 
            Color="Red" 
            Grid.Row="0" 
            Grid.Column="0" />
        
        <BoxView 
            Color="Green" 
            Grid.Row="0" 
            Grid.Column="1" />
        
        <BoxView 
            Color="Blue" 
            Grid.Row="1" 
            Grid.Column="0" />
        
        <Button 
            Text=" Stack Layout" 
            Grid.Row="1" 
            Grid.Column="1" 
            CornerRadius="0"
            Clicked="OnNavigateToStackPage" />
        
    </Grid>
    
</ContentPage>