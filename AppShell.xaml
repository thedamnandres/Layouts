<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Layouts.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Layouts"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="Black"
    Shell.ForegroundColor="#F2AFC1"
    Shell.TitleColor="#F2AFC1"
    Shell.DisabledColor="Gray"
    Shell.UnselectedColor="LightGray"
    Shell.TabBarBackgroundColor="Black"
    Shell.TabBarForegroundColor="#F2AFC1"
    Title="Layouts">

    <ShellContent
        Title="GRID"
        ContentTemplate="{DataTemplate local:GridPage}"
        Route="MainPage" />
    
</Shell>
